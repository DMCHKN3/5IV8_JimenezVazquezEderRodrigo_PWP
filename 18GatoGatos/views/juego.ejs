                <% score.forEach(function(partida) { %>
                    <li class="partida-item">
                        <strong><%= partida.ganador %></strong> - <%= new Date(partida.fecha).toLocaleString() %>
                    </li>
                <% }); %>
            <% } else { %>
                <li class="partida-item">No hay partidas guardadas aún</li>
